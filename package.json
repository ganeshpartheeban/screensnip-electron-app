{
    "name": "snipper",
    "version": "1.0.0",
    "description": "Snipping tool build with Electron, React and Nodejs",
    "main": "./app/build/app.js",
    "scripts": {
        "dev": "concurrently \"cross-env NODE_ENV=development webpack-dev-server --config webpack/dev.config.js\" \"cross-env NODE_ENV=development electron ./app/src/main/app.js\"",
        "prod": "cross-env NODE_ENV=production webpack --progress --color --config webpack/prod.config.js",
        "start": "npm run prod && electron app/build/app.js",
        "pack": "electron-builder --dir",
        "dist": "npm run prod && electron-builder",
        "server": "node ./server/server.js",
        "postinstall": "electron-builder install-app-deps"
    },
    "author": {
        "name": "Waleed Ahmad",
        "email": "waleedgplus@gmail.com",
        "url": "https://github.com/waleedahmad"
    },
    "license": "MIT",
    "build": {
        "productName": "Screen-Snip",
        "win": {
            "target": "NSIS"
        },
        "linux": {
            "target": "deb"
        },
        "mac": {
            "target": "dmg",
            "category": "public.app-category.developer-tools"
        },
        "directories": {
            "output": "release"
        }
    },
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.5",
        "babel-minify-webpack-plugin": "^0.2.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-1": "^6.24.1",
        "concurrently": "^3.6.1",
        "copy-webpack-plugin": "^4.6.0",
        "cross-env": "^7.0.3",
        "css-loader": "^0.28.11",
        "electron": "^11.1.0",
        "electron-builder": "^22.9.1",
        "electron-devtools-installer": "^2.2.4",
        "extract-text-webpack-plugin": "^3.0.2",
        "file-loader": "^0.11.2",
        "node-sass": "^5.0.0",
        "react-hot-loader": "^3.1.3",
        "sass-loader": "^6.0.7",
        "style-loader": "^0.18.2",
        "webpack": "^3.12.0",
        "webpack-dev-server": "^2.11.5",
        "webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
        "axios": "^0.18.1",
        "body-parser": "^1.19.0",
        "bootstrap": "^4.5.3",
        "express": "^4.17.1",
        "jimp": "^0.2.28",
        "jquery": "^3.5.1",
        "popper.js": "^1.16.1",
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "react-rnd": "^8.0.2",
        "spectre.css": "^0.5.9",
        "uuid": "^3.4.0"
    }
}
